@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
    Layout = "/Views/Shared/_LoginLayout.cshtml";

}

<header>
    <h4 class="text-muted text-center">Click here to logout</h4>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline d-flex justify-content-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-danger text-dark">Logout</button>
            </form>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    }
</header>
