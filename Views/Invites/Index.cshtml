@model IEnumerable<TurboTicketsMVC.Models.Invite>

@{
    ViewData["Title"] = "Index";
    bool isAdmin = User.IsInRole("Admin");
}

<link rel="stylesheet" href="~/gogi/vendors/dataTable/datatables.min.css" type="text/css">

<div class="content">
    <div class="page-header">
        <div class="d-flex justify-content-between">
            <div>
                <h3>Company Invites</h3>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Dashboard">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Company Invites</li>
                    </ol>
                </nav>
            </div>
            @if (isAdmin)
            {
                <a asp-controller="Invites" asp-action="Create">
                    <div class="btn btn-primary">
                        Create New
                    </div>
                </a>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card border border-dark">
                <div class="card-body">
                    @if (Model.Count() > 0)
                    {
                        <table id="example1" class="table table-striped table-bordered" style="width: 100%;">
                            <thead>
                                <tr>

                                    <th>
                                        Invitee Name
                                    </th>
                                    <th>
                                        Invitee Email
                                    </th>
                                    <th>
                                        Invited By
                                    </th>
                                    <th>
                                        Invite Date
                                    </th>
                                    <th>
                                        Acceptance
                                    </th>
                                    <th>
                                        Validity
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.InviteeFirstName @item.InviteeLastName
                                        </td>
                                        <td>
                                            @item.InviteeEmail
                                        </td>
                                        <td>
                                            @item.Invitor!.FullName
                                        </td>
                                        <td>
                                            @item.InviteDate.ToString("dd MMM yyyy")
                                        </td>
                                        @if(item.JoinDate != null)
                                        {
                                            <td>
                                                <div class="badge d-flex justify-content-center bg-success">
                                                    Joined
                                                </div>
                                            </td>
                                        } else
                                        {
                                            <td>
                                                <div class="badge d-flex justify-content-center badge bg-primary">
                                                Not Joined

                                                </div>
                                            </td>
                                        }
                                        @if(item.IsValid)
                                        {
                                            <td>
                                                <div class="bg-success d-flex justify-content-center badge">

                                                Valid
                                                </div>
                                            </td>
                                        } else
                                        {
                                            <td>
                                                <div class="badge d-flex justify-content-center bg-danger">
                                                    Invalid
                                                </div>
                                                </td>
                                        }                                     
                
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <h5 class="text-muted text-center">No Invites to show</h5>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InviteDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JoinDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyToken)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InviteeEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InviteeFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InviteeLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsValid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invitor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invitee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.InviteDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JoinDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyToken)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InviteeEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InviteeFirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InviteeLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsValid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Invitor.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Invitee.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    <script src="~/gogi/vendors/dataTable/datatables.min.js"></script>
    <script src="~/gogi/assets/js/examples/datatable.js"></script>
}