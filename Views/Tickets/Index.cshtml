@model IEnumerable<TurboTicketsMVC.Models.Ticket>
@using Microsoft.AspNetCore.Identity;
@inject UserManager<TTUser> _UserManager;
@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/gogi/vendors/dataTable/datatables.min.css" type="text/css">



<div class="content ">

    <div class="page-header">
        <div class="d-flex justify-content-between">
            <div>
                <h3>All Tickets</h3>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Dashboard">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">All Tickets</li>
                    </ol>
                </nav>
            </div>
            <a asp-controller="Tickets" asp-action="Create">
                <div class="btn btn-primary">
                    Create New
                </div>
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">


            <div class="card">
                <div class="card-body">
                    <table id="example1" class="table table-striped table-bordered" style="width: 100%;">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    Project
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreatedDate)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.TicketStatus)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TicketPriority)
                                </th>

                                <th>
                                    Developer
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @item.Project.Name
                                    </td>
                                    <td>
                                        @item.CreatedDate.ToString("dd MMM yyyy")
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.TicketStatus)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TicketPriority)
                                    </td>
                                    @if (item.DeveloperUser != null)
                                    {
                                        <td>
                                            @item.DeveloperUser!.FullName
                                        </td>

                                    }
                                    else
                                    {
                                        <td>
                                            Unassigned
                                        </td>
                                    }
                                    <td>
                                        <a asp-controller="Tickets" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                        @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
                                        {
                                            <a asp-controller="Tickets" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                            <a asp-controller="Tickets" asp-action="Archive" asp-route-id="@item.Id">Archive</a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

@section scripts {
    <!-- DataTable -->
    <script src="~/gogi/vendors/dataTable/datatables.min.js"></script>
    <script src="~/gogi/assets/js/examples/datatable.js"></script>
    <!--CK Editor-->
    <script src="https://cdn.ckeditor.com/ckeditor5/37.1.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>
}