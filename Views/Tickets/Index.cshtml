@model IEnumerable<TurboTicketsMVC.Models.Ticket>
@using Microsoft.AspNetCore.Identity;
@inject UserManager<TTUser> _UserManager;
@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/gogi/vendors/dataTable/datatables.min.css" type="text/css">



<div class="content ">

    <div class="page-header">
        <div>
    <a asp-action="Create">Create New</a>
            <h3>Datatable</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Tables</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Datatable</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body table-responsive">
                            <table id="example1" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Title)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CreatedDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TicketType)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TicketStatus)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TicketPriority)
                                        </th>

                                        <th>
                                            Developer
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Title)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TicketType)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TicketStatus)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TicketPriority)
                                            </td>
                                            @if(item.DeveloperUser != null)
                                            {
                                            <td>
                                                @item.DeveloperUser!.FullName
                                                </td>

                                            } else
                                            {
                                                <td>
                                                    Unassigned
                                                </td>
                                            }
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <!-- DataTable -->
    <script src="~/gogi/vendors/dataTable/datatables.min.js"></script>
    <script src="~/gogi/assets/js/examples/datatable.js"></script>
}