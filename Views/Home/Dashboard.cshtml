@section Scripts {
    <script src='https://cdn.plot.ly/plotly-2.4.2.min.js'></script>

    <script>

            var projectNames = @Html.Raw(Json.Serialize(projectNames));
            var tickets = @Html.Raw(Json.Serialize(ticketNums));
            var developers = @Html.Raw(Json.Serialize(developerNums));
         
            var options = {
                series: [{
                    name: 'Tickets',
                    data: tickets
                }, {
                    name: 'Developers',
                    data: developers
                }],
                colors: ["#5066e1", "#FA9421"],
                chart: {
                    type: 'bar'
                },
                plotOptions: {
                    bar: {
                        horizontal: false,
                        columnWidth: '35%',
                    },
                },
                dataLabels: {
                    enabled: false
                },
                stroke: {
                    show: true,
                    width: 2,
                    colors: ['transparent']
                },
                xaxis: {
                    categories: projectNames,
                },
                yaxis: {
                    title: {
                        text: 'Projects vs Developers'
                    }
                },
                fill: {
                    opacity: 1
                },
                tooltip: {
                    y: {
                        formatter: function (val) {
                            return val 
                        }
                    }
                }
            };

            var chart = new ApexCharts(document.querySelector("#ticketsDevelopersChart"), options);
            chart.render();
    </script>
    <script>
        var options = {
            series: [@unassignedPercent, @assignedPercent],
            chart: {
                type: 'donut',
            },
                colors: ["#FA9421", "#5066e1"],
            labels: ['Unassigned Tickets', 'Assigned Tickets'],
            track: {
                background: "#cccccc"
            },
            dataLabels: {
                enabled: false
            },

            plotOptions: {
                pie: {
                    expandOnClick: true,
                    donut: {
                        labels: {
                            show: true,
                            value: {
                                formatter: function (val) {
                                    return val + "%";
                                }
                            }
                        }
                    }
                }
            },
            tooltip: {
                shared: false,
                y: {
                    formatter: function (val) {
                        return val + "%";
                    }
                }
            },
            legend: {
                show: false
            }
        };

        var chart = new ApexCharts(document.querySelector("#ticketsAssignmentChart"), options);
        chart.render();
    </script>
    <script>
        var options = {
            series: [@newPercent, @developmentPercent, @testingPercent, @resolvedPercent],
            chart: {
                type: 'donut',
            },
                colors: ['#F1C612', "#FE7922", '#5066e1', '#15A51C'],
            labels: ['New Tickets', 'Development Tickets', 'Testing Tickets', "Resolved Tickets"],
            track: {
                background: "#cccccc"
            },
            dataLabels: {
                enabled: false
            },

            plotOptions: {
                pie: {
                    expandOnClick: true,
                    donut: {
                        labels: {
                            show: true,
                            value: {
                                formatter: function (val) {
                                    return val + "%";
                                }
                            }
                        }
                    }
                }
            },
            tooltip: {
                shared: false,
                y: {
                    formatter: function (val) {
                        return val + "%";
                    }
                }
            },
            legend: {
                show: false
            }
        };

        var chart = new ApexCharts(document.querySelector("#ticketsStatusChart"), options);
        chart.render();
    </script>
    <script src="~/gogi/vendors/dataTable/datatables.min.js"></script>
    <script src="~/gogi/assets/js/examples/datatable.js"></script>
}
